<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
<!--    android:gravity="center_horizontal">-->

    <!--<androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

    <EditText
        android:id="@+id/food_name"
        android:hint="음식이름"
        android:layout_marginTop="50dp"
        android:layout_width="200sp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_send"
        android:layout_marginTop="10dp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="영양성분 조회"
        android:onClick="mOnClick"
        />

    <TextView
        android:id="@+id/text_view_result"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:orientation="vertical"-->
<!--        android:gravity="center_horizontal">-->

        <TextView
            android:id="@+id/set_date_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:text="입력하는 날짜/시간" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/check_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜:  "
                android:layout_marginRight="10dip"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/present_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="present date"
                android:layout_marginRight="10dip"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/datePicker_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="수정"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/check_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간:  "
                android:layout_marginRight="10dip"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/present_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="present time"
                android:layout_marginRight="10dip"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/timePicker_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="수정"/>


        </LinearLayout>



        <RadioGroup
            android:id="@+id/time_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="0dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/breakfast_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아침"></RadioButton>

            <RadioButton
                android:id="@+id/lunch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심"></RadioButton>

            <RadioButton
                android:id="@+id/dinner_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저녁"></RadioButton>

        </RadioGroup>




    <Button
        android:id="@+id/btn_register"
        android:layout_marginTop="10dp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="등록"
        android:onClick="mOnClick"
        />


</LinearLayout>