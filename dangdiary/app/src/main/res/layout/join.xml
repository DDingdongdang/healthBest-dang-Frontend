<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="아이디:  "/>

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="아이디 입력"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="패스워드:  "/>

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="패스워드 입력"
                    android:inputType="textPassword"/>

            </LinearLayout>


<!--        db랑 연결해서 중복 체크 안할거면 걍 빼도 될듯 ㅎㅎ-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="중복 체크:  "/>

                <EditText
                    android:id="@+id/et_passck"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="패스워드 재입력"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="닉네임:  "/>

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="설정할 닉네임 입력"
                    android:inputType="textPersonName" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="나이:  "/>

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="나이 입력"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/check_eatOrNot_title"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:text="성별: " />

                <RadioGroup
                    android:id="@+id/sex_radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btn_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="여자"></RadioButton>

                    <RadioButton
                        android:id="@+id/btn_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="남자"></RadioButton>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="키:  "/>

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="키 입력"
                    android:inputType="number"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="몸무게:  "/>

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="몸무게 입력"
                    android:inputType="number"/>
            </LinearLayout>

            <Button
                android:id="@+id/validateButton"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="28dp"
                android:backgroundTint="#FFD27F"
                android:text="중복 확인"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFBB3F"
                android:text="회원가입" />

        </LinearLayout>

    </ScrollView>





</LinearLayout>